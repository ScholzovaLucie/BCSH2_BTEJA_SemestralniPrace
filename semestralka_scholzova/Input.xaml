<Window x:Class="semestralka_scholzova.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semestralka_scholzova"
        xmlns:model = "clr-namespace:semestralka_scholzova.Model" d:DataContext="{d:DesignInstance Type=model:InputText}"
        mc:Ignorable="d"
        Title="Input" Height="385" Width="836" ResizeMode="NoResize">
    <Window.Resources >
        <model:InputText x:Key="textArea"/>
    </Window.Resources>
    
    <Grid Background="#FF488286">

        <TextBox Text="{Binding Path = TextArea, Mode = TwoWay}" Margin="0,36,0,46" HorizontalAlignment="Center" Width="200" Height="50"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Zadej hodnotu" VerticalAlignment="Top" FontSize="16"/>

        <Button x:Name="btnRun1" Command="{Binding DoneCommand}" Background="#FFB7D5D4" Height="30" FontFamily="Bahnschrift SemiBold" FontSize="14" FontWeight="Bold" FontStyle="Normal" Width="90" BorderBrush="#FFB7D5D4" Content="DOne" MinWidth="90" MaxWidth="90" MinHeight="30" MaxHeight="30" Margin="700,244,10,10"/>

    </Grid>


</Window>
